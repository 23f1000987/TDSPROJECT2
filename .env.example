# ============================================================
# HYBRID QUIZ SOLVER - ENVIRONMENT CONFIGURATION
# ============================================================

# ------------------------------------------------------------
# LLM CONFIGURATION
# ------------------------------------------------------------
# Set to true to use Gemini (with OpenAI fallback)
# Set to false to use OpenAI only
USE_GEMINI=true

# ------------------------------------------------------------
# GEMINI API KEYS (For Rotation)
# ------------------------------------------------------------
# Add as many Gemini keys as you have (GOOGLE_API_KEY_5, _6, etc.)
# The system automatically detects and rotates through all keys
# Get keys from: https://aistudio.google.com/app/apikey

GOOGLE_API_KEY=A************0
# GOOGLE_API_KEY_2=
# GOOGLE_API_KEY_3=
# GOOGLE_API_KEY_4=
# GOOGLE_API_KEY_5=
# GOOGLE_API_KEY_6=

# ------------------------------------------------------------
# OPENAI API CONFIGURATION
# ------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=e*********************4

# Fallback OpenAI model (always used, required)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
FALLBACK_OPENAI_MODEL=gpt-4.1-mini

# Primary OpenAI model (optional, defaults to fallback model if empty)
# Use this if you want a different model for primary vs fallback
PRIMARY_OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=https://aipipe.org/openrouter/v1

# ------------------------------------------------------------
# QUIZ CREDENTIALS
# ------------------------------------------------------------
# Your email and secret for quiz authentication
TDS_EMAIL=
TDS_SECRET=

# ------------------------------------------------------------
# REMOTE LOGGING (Optional)
# ------------------------------------------------------------
# Enable GitHub Gist logging to save logs permanently
# Create token at: https://github.com/settings/tokens
# Required scope: gist (only this one)
GITHUB_TOKEN=

# ============================================================
# CONFIGURATION EXAMPLES
# ============================================================

# Example 1: Gemini with OpenAI Fallback (Recommended)
# USE_GEMINI=true
# GOOGLE_API_KEY=your_gemini_key_1
# GOOGLE_API_KEY_2=your_gemini_key_2
# GOOGLE_API_KEY_3=your_gemini_key_3
# OPENAI_API_KEY=your_openai_key

# Example 2: OpenAI Only
# USE_GEMINI=false
# OPENAI_API_KEY=your_openai_key
# OPENAI_MODEL=gpt-4o-mini

# ============================================================
# NOTES
# ============================================================
# - USE_GEMINI=true: Uses Gemini with key rotation, falls back to OpenAI
# - USE_GEMINI=false: Uses OpenAI only (no Gemini needed)
# - GITHUB_TOKEN is optional (for remote logging)
# - For exam: Set USE_GEMINI=true with multiple Gemini keys
